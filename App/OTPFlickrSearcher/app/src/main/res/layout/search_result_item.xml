<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/half_element_margin"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/element_margin"
        android:layout_marginTop="@dimen/half_element_margin"
        android:layout_marginBottom="@dimen/half_element_margin">

        <ImageView
            android:id="@+id/firstImage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="#FF0000"
            tools:layout_width="125dp"
            tools:layout_height="125dp">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/half_element_margin"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/element_margin"
        android:layout_marginTop="@dimen/half_element_margin"
        android:layout_marginBottom="@dimen/half_element_margin">

        <ImageView
            android:id="@+id/secondImage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="#0027FF"
            tools:layout_width="125dp"
            tools:layout_height="125dp">

        </ImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>