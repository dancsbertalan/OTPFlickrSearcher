<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.details.DetailsFragment">

    <ProgressBar
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/element_margin"
            android:layout_marginEnd="@dimen/element_margin"
            android:orientation="vertical">

            <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/element_margin"
                app:centered="true"
                tools:title="Example title"
                tools:value="Example description" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/detailedImage"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/half_element_margin"
                    tools:src="#FF0000" />

            </androidx.cardview.widget.CardView>

            <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:title="@string/owner_title">

                <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                    android:id="@+id/ownerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    app:title="@string/name_title"
                    tools:value="Owner name" />

                <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                    android:id="@+id/ownerLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    app:title="@string/location_title"
                    tools:value="Owner location" />

            </com.bertalandancs.otpflickrsearcher.view.DetailsItem>

            <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:title="@string/visibility_title">

                <TextView
                    android:id="@+id/publicVisible"
                    style="@style/DetailsItemValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    android:text="@string/is_visible_for_everyone"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/friendsVisible"
                    style="@style/DetailsItemValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    android:text="@string/is_visible_for_friends"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/familyVisible"
                    style="@style/DetailsItemValueStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/element_margin"
                    android:text="@string/is_visible_for_family"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </com.bertalandancs.otpflickrsearcher.view.DetailsItem>

            <com.bertalandancs.otpflickrsearcher.view.DetailsItem
                android:id="@+id/tagsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:title="@string/tags_title" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

